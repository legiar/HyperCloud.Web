- add_shortcut "Tickets", tickets_path, :count => 4 
    
%article.content.col2
  %header
    %h2 Statistics
    %nav
      %ul.tabs
        %li= link_to "Sites", "#tab1", :class => "default"
        %li= link_to "Hosts", "#tab2"
        %li= link_to "Slices", "#tab3"
        %li= link_to "Databases", "#tab4"
  %section
    #tab1.tab.default
      %h3 Sites statistics
      = render "sites/stats"
    #tab2.tab
      %h3 Hosts statistics
      = render "hosts/stats"
    #tab3.tab
      %h3 Slice statistics
      = render "slices/stats"
    #tab4.tab
      %h3 Databases statistics
      = render "databases/stats"
  %footer
    
%article.content.col2.clear-rm
  %header
    %h2 Summary
    %nav
      %a.toggle-options-switch.button.gray{:href => "#"}
        = image_tag("icon_options.png", :alt => "Options") 
      %ul.options-switch{:style => "display: none;"}
        %li
          %a{:href => "#"} View
        %li
          %a{:href => "#"} Edit
        %li
          %a{:href => "#"} Delete
  %section
    %ul.stats-summary
      = display_summary(Host)
      = display_summary(Slice)
      = display_summary(Site)
.clearfix

