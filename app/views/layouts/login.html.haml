!!! XML
!!! Strict
%html

  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %title HyperAdmin
    = stylesheet_link_tag :all, :cache => 'all'
    = javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'application', :cache => 'all'
    = csrf_meta_tag

  %body#login-bg
    #login-holder
      #logo-login
        = link_to image_tag('shared/logo.png', :size => "156x40", :alt => ""), root_url
      .clear

      = yield

