!!! 5
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head", :stylesheet_partial => "layouts/stylesheets"
  %body.login
    .login-box
      %section.portlet.login-box-top
        %header
          %h2.ac HyperCloud
        %section
          = render "layouts/flashes"
          = yield
          %footer.ac
            - if devise_mapping.recoverable? && controller_name != 'passwords'
              = link_to "Reset Password?", new_password_path(resource_name), :class => "button"
            - if devise_mapping.registerable? && controller_name == 'sessions' #!= 'registrations'
              = link_to "Register", new_registration_path(resource_name), :class => "button"
            - if controller_name != 'sessions'
              = link_to "Sign in", new_session_path(resource_name), :class => "button"
            - if devise_mapping.confirmable? && controller_name != 'confirmations'
              %br
              = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
            - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
              %br
              = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
          
    = render "layouts/javascripts"

