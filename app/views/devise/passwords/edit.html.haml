#loginbox
  #login-inner
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.hidden_field :reset_password_token
      %table(border="0" cellpadding="0" cellspacing="0")
        %tr
          %th(colspan=2)
            %h2 Change your password

        %tr
          %td(colspan=2)= devise_error_messages!
        
        %tr
          %th= f.label :password, "New password"
          %td= f.password_field :password, :class => "login-inp"

        %tr
          %th= f.label :password_confirmation, "Confirm new password"
          %td= f.password_field :password_confirmation, :class => "login-inp"
        
        %tr
          %th &nbsp;
          %td= f.submit "Change my password", :class => "submit-login"

= render :partial => "devise/shared/links"
