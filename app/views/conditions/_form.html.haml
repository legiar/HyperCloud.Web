= form_for(@condition) do |f|
  - if @condition.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@condition.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @condition.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :event_type
    %br
    = f.text_field :event_type
  .field
    = f.label :model
    %br
    = f.text_field :model
  .field
    = f.label :fields
    %br
    = f.text_field :fields

  .actions
    = f.submit
