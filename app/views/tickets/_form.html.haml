= semantic_form_for @ticket do |f|
  = f.semantic_errors
  = f.inputs "Ticket" do
    = f.input :title
    = f.input :group
    = f.input :priority
    = f.input :details
    =# f.input :status
    =# f.input :author
    =# f.input :owner
    =# f.input :closed_at
    =# f.input :comments_count
  = f.buttons do
    = f.submit "New ticket"
