- @title = "Tasks"
%p= link_to "New task", new_task_path

%table.table
  %thead
    %tr
      = table_columns %w(name params script)
  
  %tbody
    - for task in @tasks
      %tr{ :class => cycle(:odd, :even) }
        %td= task.id
        %td= task.name
        %td= task.params
        %td= task.script
        %td.action
          = link_to 'Show', task
          = link_to 'Edit', edit_task_path(task)
          = link_to 'Destroy', task, :confirm => 'Are you sure', :method => :delete
