= form_for(@task) do |f|
  - if @task.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@task.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @task.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :job
    %br
    = f.text_field :job
  .field
    = f.label :script
    %br
    = f.text_area :script

  .actions
    = f.submit
