  - if @slice.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@slice.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @slice.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :host
    %br
    = f.text_field :host

  .actions
    = f.submit
