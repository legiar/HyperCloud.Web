- if @site.errors.any?
  .message.error
    %h3= "#{pluralize(@site.errors.count, 'error')} prohibited this user from being saved:"
    %ul
    - @site.errors.full_messages.each do |msg|
      %li= msg
      
= semantic_form_for @site do |f|
  = f.inputs "General" do
    = f.input :name, :hint => "Subdomain name"
    = f.input :product, :collection => Product.order(:name)
  = f.inputs "Deploy information" do
    = f.input :pool, :collection => Pool.order(:name)

  = f.buttons do
    = f.submit
  
