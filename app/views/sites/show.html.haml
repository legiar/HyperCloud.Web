- add_breadcrumb @site.name, site_path(@site)

= workspace "Site '#{@site.name}'" do 
  /%nav
  /  = link_to image_tag("icon_options.png", :alt => "Options"), "#", :class => "toggle-options-switch button gray" 
  /  %ul.options-switch{:style => "display: none; margin-left: 8px"}
  /    %li= link_to "Edit", edit_site_path(@site)
  = section "Info", :class => "grid_5" do
    %dl
      %dt State
      %dd #Todo
      %dt Pool
      %dd= @site.pool.try(:name)
      %dt Product
      %dd= @site.product.try(:name)
      %dt Site instances
      %dd        
        %table.display
          %thead
            %tr
              = table_head %w(slice state enabled)
          %tbody
            = render @site.instances
  

  = section "Usage statistics", :class => "grid_7" do
    /%nav
    /  %ul.button-switch
    /    %li= link_to "Refresh", "#", :class => "button"
    %ul
      %li User statistics    
      %li Web alizer
      %li Traffic
      %li Summary CPU usage

  .clearfix

  = section "Support" do
    /%nav
    /  %form.content-box-header-search{:action => "/"}
    /    %input.content-box-header-search-input{:name => "", :type => "text"}
    /      %button.content-box-header-search-btn Search
    .sidetabs
      %nav.sidetab-switch
        %ul
          %li= link_to "Error Logs", "#sidetab1", :class => "default-sidetab current"
          %li= link_to "Tickets", "#sidetab2" 
        %p Support info
      #sidetab1.sidetab.default-sidetab
        = render "site_errors/list"
      #sidetab2.sidetab{:style => "display: none;"}
        
