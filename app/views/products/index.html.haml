- @title = 'Products'
%p= link_to 'New Product', new_product_path

%table.table
  %thead
    %tr
      %th.check
      %th Name
      %th Version
      %th Published
      %th Demo
      %th Release
      %th.actions.options
  
  %tbody
    - for product in @products
      %tr{ :class => cycle(:odd, :even) }
        %td= h product.id
        %td= h product.name
        %td= h product.version
        %td= h product.published
        %td= h product.demo
        %td= h product.release
        %td.options.action
          = link_to 'Show', product
          = link_to 'Edit', edit_product_path(product)
          = link_to 'Destroy', product, :confirm => 'Are you sure', :method => :delete
